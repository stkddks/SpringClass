<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.zerock.mapper.BoardMapper">
	<select id="getList" resultType="org.zerock.domain.BoardVO">
		select * from tbl_board2 where bno > 0
	</select>
	<insert id="insert">
    insert into tbl_board2 (bno,title,content,writer,regDate,updateDate) values(#{bno},#{title},#{content},#{writer},NOW(),NOW())
    </insert>
    <!-- 오라클에 sequence 구형했을 경우 insertSelectKey 가능-->
    <!-- 
    <insert id="insertSelectKey">
      <selectKey keyProperty="bno" order="BEFORE" resultType="long">
       select seq_board.nextval from dual
      </selectKey>
      insert into tbl_board2 (bno,title,content,writer,regDate,updateDate) values(#{bno},#{title},#{content},#{writer},NOW(),NOW())
    </insert>  
    -->
    <select id="read" resultType="org.zerock.domain.BoardVO">
       select * from tbl_board2 where bno=#{bno}
    </select>
    <delete id="delete">
    	delete from tbl_board2 where bno=#{bno} 
    </delete> 
</mapper>
  